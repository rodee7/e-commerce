
    <section class="section">
      <style>
        .section,.custom-container{
          margin-top: 2em;padding-top: 1.5em;
        }
      </style>
      <div class="container mt-5 custom-container">
        <div class="row">
            {{#each products}}
          <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem; height: 20rem">
              <img
                src= "/product-images/{{this._id}}.jpg"
                class="card-img-top"
                alt= "{{this.Name}}"
                height="150px"
                width="150px"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text">â‚¹{{this.Price}}/pk</p>
                {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
                <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
